  # make a shared data folder owned by the service account
  local sddir
  sddir="$shareddir/$service_acct/data"
  sudo -u "$service_acct" mkdir -p "$sddir"

  mkdir_install_root
  install "root" PYP_USER="$service_acct" PYP_SHARED_DATA="$sddir" PYP_LOCAL_HERE=true PYP_SHARED_EXEC_HERE=true
