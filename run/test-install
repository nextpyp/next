  # make a shared exec folder owned by the service account
  local sedir
  sedir="$shareddir/$service_acct/exec"
  sudo -u "$service_acct" mkdir -p "$sedir"

  mkdir_install_root
  install "root" PYP_USER="$service_acct" PYP_SHARED_EXEC="$sedir" PYP_LOCAL_HERE=true PYP_SHARED_DATA_HERE=true
