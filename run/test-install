test_install_as_root_small_local() {
  mkdir_install_root
  install "root" PYP_USER="$service_acct"
  assert_failed $install_exit
}


test_install_as_root_small_shared_data() {
  mkdir_install_root
  install "root" PYP_USER="$service_acct" PYP_LOCAL_HERE=true
  assert_failed $install_exit
}


test_install_as_root_small_shared_exec() {
  mkdir_install_root
  install "root" PYP_USER="$service_acct" PYP_LOCAL_HERE=true PYP_SHARED_DATA_HERE=true
  assert_failed $install_exit
}


test_install_as_service() {
  mkdir_install_service
  install "$service_acct" PYP_LOCAL_HERE=true PYP_SHARED_DATA_HERE=true PYP_SHARED_EXEC_HERE=true
  assert_succeeded $install_exit
  assert_install
  assert_owner "$installdir/nextPYP.sif" "$service_acct"
  assert_owner "$installdir/local/logs" "$service_acct"
  assert_owner "$installdir/shared/log" "$service_acct"
  assert_owner "$installdir/sharedExec/containers/pyp.sif" "$service_acct"
  uninstall "$service_acct"
  assert_succeeded $uninstall_exit
}


#--------------
# UPGRADE TESTS
#--------------


test_upgrade_as_root_folder_owned_by_root() {
  mkdir_install_root
  install "root" PYP_USER="$service_acct" PYP_LOCAL_HERE=true PYP_SHARED_DATA_HERE=true PYP_SHARED_EXEC_HERE=true
  assert_succeeded $install_exit
  srvstop
  install "root"
  assert_succeeded $install_exit
  assert_install
}


test_upgrade_as_root_folder_owned_by_admin() {
  mkdir_install_admin
  install "root" PYP_USER="$service_acct" PYP_LOCAL_HERE=true PYP_SHARED_DATA_HERE=true PYP_SHARED_EXEC_HERE=true
  assert_succeeded $install_exit
  srvstop
  install "root"
  assert_succeeded $install_exit
  assert_install
}


